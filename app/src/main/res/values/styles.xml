<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TvTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions">true</item>

        <!-- Main theme colors -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/board_selected</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/board</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/text_dollar</item>
    </style>

    <style name="Transparent" parent="TvTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PlayerNameText">
        <item name="android:textSize">@dimen/font_player</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_player_names</item>
    </style>
</resources>
